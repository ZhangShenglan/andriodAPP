<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#292c31">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/userInfo"
            android:layout_width="match_parent"
            android:layout_height="160dip"
            android:background="#364550"
            android:gravity="center"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/circleIcon"
                android:layout_width="75dip"
                android:layout_height="75dp"
                android:src="@drawable/ic_default_user" />


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:text="李宁"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="一切皆有可能一切皆有可能一"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#6d7e96"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:orientation="horizontal"
            android:padding="1dp"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/fansLayout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/drawer_bg_color_normal"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="#7d8086"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/fans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="92"
                    android:textColor="#e5e5e5"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/followsLayout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/drawer_bg_color_normal"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:gravity="center"
                    android:text="关注"
                    android:textColor="#7d8086"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/follows"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="38873"
                    android:textColor="#e5e5e5"
                    android:textSize="30dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/dynamicLayout"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/drawer_bg_color_normal"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dip"
                    android:gravity="center"
                    android:text="动态"
                    android:textColor="#7d8086"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/dynamics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="99"
                    android:textColor="#e5e5e5"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#373a3f" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/drawer_selector_bg"
                android:button="@null"
                android:drawableLeft="@drawable/project_icon_normal"
                android:drawablePadding="15dp"
                android:paddingEnd="0dp"
                android:paddingLeft="17dp"
                android:paddingRight="0dp"
                android:text="活动"
                android:textColor="@drawable/drawer_selector_font"
                android:textSize="17sp" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/drawer_selector_bg"
                android:button="@null"
                android:drawableLeft="@drawable/project_icon_normal"
                android:drawablePadding="15dp"
                android:paddingLeft="17dp"
                android:paddingRight="0dp"
                android:text="动态"
                android:textColor="@drawable/drawer_selector_font"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio2"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/drawer_selector_bg"
                    android:button="@null"
                    android:drawableLeft="@drawable/project_icon_normal"
                    android:drawablePadding="15dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="0dp"
                    android:text="消息"
                    android:textColor="@drawable/drawer_selector_font"
                    android:textSize="17sp" />

                <com.readystatesoftware.viewbadger.BadgeView
                    android:id="@+id/badge3"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/ic_notify_no_edge"
                    android:gravity="center"
                    android:visibility="invisible" />

            </RelativeLayout>

            <RadioButton
                android:id="@+id/radio3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/drawer_selector_bg"
                android:button="@null"
                android:checked="false"
                android:drawableLeft="@drawable/project_icon_normal"
                android:drawablePadding="15dp"
                android:paddingLeft="17dp"
                android:paddingRight="0dp"
                android:text="发现"
                android:textColor="@drawable/drawer_selector_font"
                android:textSize="17sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="#373a3f" />

            <TextView
                android:id="@+id/buttonSetting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/drawer_selector_bg"
                android:button="@null"
                android:drawableLeft="@drawable/project_icon_normal"
                android:drawablePadding="15dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="17dp"
                android:paddingRight="0dp"
                android:text="设置"
                android:textColor="@drawable/drawer_selector_font"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/buttonFeedback"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@drawable/drawer_selector_bg"
                android:button="@null"
                android:drawableLeft="@drawable/project_icon_normal"
                android:drawablePadding="15dp"
                android:gravity="center_vertical|left"
                android:paddingLeft="17dp"
                android:paddingRight="0dp"
                android:text="意见反馈"
                android:textColor="@drawable/drawer_selector_font"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>